FROM php:8.4-fpm

RUN apt-get update \
 && apt-get install -y --no-install-recommends \
    unzip \
    libzip-dev \
    libonig-dev \
    libxml2-dev \
 && docker-php-ext-install pdo_mysql mbstring xml zip \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/*

COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

WORKDIR /var/www
